<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import tn.flashcards.view.QRView?>
<?import javafx.geometry.Insets?>
<?import atlantafx.base.controls.RingProgressIndicator?>
<StackPane styleClass="view" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.flashcards.controller.TrainingController">
   <children>
      <Pane fx:id="pileList">
         <TableView fx:id="table" styleClass="tableStack" stylesheets="@../css/style.css" BorderPane.alignment="CENTER">
            <columns>
               <TableColumn fx:id="cName" prefWidth="160.0" text="Pile" />
               <TableColumn fx:id="cNb" prefWidth="100.0" text="Nb. cartes" />
               <TableColumn fx:id="cTags" prefWidth="120.0" text="Tags" />
               <TableColumn fx:id="cCreateur" minWidth="0.0" prefWidth="120.0" text="Créateur" />
               <TableColumn fx:id="cDate" minWidth="0.0" prefWidth="153.0" text="Dernière utilisation" />
               <TableColumn fx:id="cJouer" editable="false" prefWidth="200.0" sortable="false" />
            </columns>
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
         </TableView>
      </Pane>

      <VBox fx:id="errorMsg" visible="false">
         <Label text="Aucune carte n'est disponible pour cette pile."/>
         <Button onAction="#closeTraining" text="Revenir à la liste de pile"/>
      </VBox>

      <BorderPane fx:id="trainingView" visible="false">
         <top>
            <BorderPane>
               <left>
                  <Label fx:id="pileName" styleClass="view; label"/>
               </left>
               <right>
                  <Button fx:id="closeTraining" onAction="#closeTraining" styleClass="view" alignment="BASELINE_RIGHT" text="Terminer l'apprentissage"/>
               </right>
            </BorderPane>
         </top>

         <center>
            <HBox fx:id="cardView">
               <Pane fx:id="question" styleClass="view"/>
               <StackPane alignment="CENTER">
                  <Pane fx:id="reponse" styleClass="view"/>
                  <AnchorPane>
                     <RingProgressIndicator styleClass="timer_ring" AnchorPane.rightAnchor="350" AnchorPane.topAnchor="100" fx:id="timerRing" prefHeight="250" visible="false"/>
                  </AnchorPane>
               </StackPane>
            </HBox>
         </center>

         <bottom>
            <StackPane alignment="CENTER">
               <Button fx:id="showAnsButton" onAction="#affReponse" styleClass="view" text="Afficher la réponse"/>
               <HBox fx:id="scoreButtons" styleClass="view" visible="false" alignment="CENTER">
                  <Button onAction="#scoreCard" id="0" text="0" style="text-align: center"/>
                  <Button onAction="#scoreCard" id="1" text="1" style="text-align: center"/>
                  <Button onAction="#scoreCard" id="2" text="2" style="text-align: center"/>
                  <Button onAction="#scoreCard" id="3" text="3" style="text-align: center"/>
                  <Button onAction="#scoreCard" id="4" text="4" style="text-align: center"/>
                  <Button onAction="#scoreCard" id="5" text="5" style="text-align: center"/>
               </HBox>
            </StackPane>
         </bottom>

      </BorderPane>
   </children>
</StackPane>
