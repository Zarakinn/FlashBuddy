<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import tn.flashcards.view.QRView?>
<?import javafx.geometry.Insets?>
<StackPane styleClass="view" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.flashcards.controller.TrainingController">
   <children>
      <Pane fx:id="pileList">
         <TableView fx:id="table" styleClass="tableStack" stylesheets="@../css/style.css" BorderPane.alignment="CENTER">
            <columns>
               <TableColumn fx:id="cName" prefWidth="160.0" text="Pile" />
               <TableColumn fx:id="cNb" prefWidth="100.0" text="Nb. cartes" />
               <TableColumn fx:id="cTags" prefWidth="120.0" text="Tags" />
               <TableColumn fx:id="cCreateur" minWidth="0.0" prefWidth="120.0" text="Créateur" />
               <TableColumn fx:id="cDate" minWidth="0.0" prefWidth="153.0" text="Dernière utilisation" />
               <TableColumn fx:id="cJouer" editable="false" prefWidth="200.0" sortable="false" />
            </columns>
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
         </TableView>
      </Pane>
      <BorderPane fx:id="trainingView" visible="false">
         <top>
            <BorderPane>
               <left>
                  <Label fx:id="pileName" text="Nom de la pile"/>
               </left>
               <right>
                  <Button fx:id="closeTraining" onAction="#closeTraining" alignment="BASELINE_RIGHT" text="Terminer l'apprentissage"/>
               </right>
            </BorderPane>
         </top>

         <center>
            <HBox fx:id="cardView"/>
         </center>

         <bottom>
            <StackPane alignment="CENTER">
               <Button fx:id="showAnsButton" onAction="#affReponse" text="Afficher la réponse"/>
               <HBox fx:id="scoreButtons" visible="false" alignment="CENTER">
                  <Button onAction="#nextCard" text="0" style="text-align: center"/>
                  <Button onAction="#nextCard" text="1" style="text-align: center"/>
                  <Button onAction="#nextCard" text="2" style="text-align: center"/>
                  <Button onAction="#nextCard" text="3" style="text-align: center"/>
                  <Button onAction="#nextCard" text="4" style="text-align: center"/>
                  <Button onAction="#nextCard" text="5" style="text-align: center"/>
               </HBox>
            </StackPane>
         </bottom>

      </BorderPane>
   </children>
</StackPane>
