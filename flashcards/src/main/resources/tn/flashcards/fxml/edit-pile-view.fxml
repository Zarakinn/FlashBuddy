<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="1000.0" styleClass="view" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.flashcards.controller.EditPileController">
    <top>
      <VBox>
         <children>
              <TextField fx:id="name" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="341.0" />
            <TextField fx:id="desc" />
         </children>
      </VBox>
    </top>
    <center>
        <ListView fx:id="view">
        </ListView>
    </center>
    <bottom>
        <StackPane>
            <children>
                <HBox alignment="BOTTOM_CENTER" spacing="50">
                    <Button onAction="#AddCard" text="Ajouter une Carte" />
                    <Button onAction="#Retour" text="Retour" />
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>
