<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="1000.0" styleClass="view" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.flashcards.controller.EditPileController">
    <top>
        <TextField fx:id="name"/>
    </top>
    <center>
        <ListView fx:id="view">
        </ListView>
    </center>
    <bottom>
        <StackPane>
            <children>
                <HBox alignment="BOTTOM_CENTER" spacing="50">
                    <Button onAction="#AddCard" text="Ajouter une Carte" />
                    <Button onAction="#Retour" text="Retour" />
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>
