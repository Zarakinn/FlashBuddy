    <groupId>tn</groupId>
    <artifactId>flashcards</artifactId>
    <version>1.0</version>
    <name>flashcards</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>5.9.0</junit.version>
